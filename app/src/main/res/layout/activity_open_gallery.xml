<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.junctiontech.homeonline.OpenGallery">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:src="@drawable/a"
        android:weightSum="100">
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/galleryLiving"
        android:layout_weight="50"
        android:onClick="myGalleryV"
        android:src="@drawable/livingroom"/>
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/galleryBedroom"
            android:layout_weight="50"
            android:onClick="myGalleryV"
            android:src="@drawable/bed"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:weightSum="100">
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/galleryKitchen"
            android:layout_weight="50"
            android:onClick="myGalleryV"
            android:src="@drawable/kitchen"/>
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/galleryBathroom"
            android:layout_weight="50"
            android:onClick="myGalleryV"
            android:src="@drawable/bath"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        android:weightSum="100">
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/galleryWashdry"
            android:layout_weight="100"
            android:onClick="myGalleryV"
            android:src="@drawable/washdry"/>


    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
