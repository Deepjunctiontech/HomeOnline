<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="in.junctiontech.homeonline.BedRoom"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:padding="10dp"
            android:text="Select a room "
            android:textColor="#006699"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c6f4f1"></View>

        <Spinner
            android:id="@+id/bed_spinner_total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Bed Room"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox
                            android:id="@+id/bedroom_ck_tv"
                            android:text="TV" />

                        <CheckBox
                            android:id="@+id/bedroom_ck_ac"

                            android:text="AC" />
                    </TableRow>

                    <TableRow>

                        <CheckBox

                            android:id="@+id/bedroom_ck_bed"

                            android:text="Bed" />


                        <CheckBox
                            android:id="@+id/bedroom_ck_dressing"
                            android:text="Dressing Table" />


                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/bedroom_ck_ward"

                            android:text="Wardrobe" />


                        <CheckBox
                            android:id="@+id/bedroom_ck_falseceiling"

                            android:text="False Ceiling" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/bedroom_ck_attachbalcony"

                            android:text="Attached Balcony" />

                        <CheckBox
                            android:id="@+id/bedroom_ck_attachbathroom"

                            android:text="Attached Bathroom" />
                    </TableRow>
                    <TableRow>

                        <CheckBox
                            android:id="@+id/bedroom_ck_window"

                            android:text="Windows" />


                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/window"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Flooring Type"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_weight="50"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"></View>

                <Spinner
                    android:id="@+id/bedroom_spiner_flooringtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/flooring"
                    android:layout_weight="50"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button

        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:onClick="myClick"
        android:text="NEXT"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_button"/>

</LinearLayout>
