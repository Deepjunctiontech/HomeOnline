<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context="in.junctiontech.homeonline.ResidentialD1">


    <TextView
        android:id="@+id/tv_residential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/residential_residential_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <EditText
                    android:id="@+id/residential_residential_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:ems="10"
                    android:hint=" No. of Residential Unit"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tv_storeys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="No. of Storey's"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_weight="50"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    ></View>


                <Spinner
                    android:id="@+id/residentiel_spiner_storey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/bhk"
                    android:layout_weight="50"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"
                android:padding="20dp"

                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox

                            android:id="@+id/residential_ck_serventroom"
                            android:text="Servant Room" />

                        <CheckBox

                            android:id="@+id/residential_ck_prayerroom"
                            android:text="Prayer's Room" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/residential_ck_balcony"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balcony" />

                        <CheckBox
                            android:id="@+id/residential_ck_tarraceaccess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terrace Access" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/residential_ck_privateaccess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private Access" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:text="Food "
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <RadioGroup


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/property_food_veg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="Veg" />

                    <RadioButton
                        android:id="@+id/property_food_alltype"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="All Type" />

                    />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Ready to Move "
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <RadioGroup


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/property_ready_to_move_yes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/property_ready_to_move_no"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="No" />

                    />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Pets Allowed"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <RadioGroup

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/residential_rb_pets_allowed_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/residential_rb_pets_allowed_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="No" />


                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_entrance_facing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Main Entrance Facing"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    ></View>

                <Spinner
                    android:id="@+id/residentiel_spiner_enterance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/enterance"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_visitorparking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Visitor Parking"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox
                            android:id="@+id/residential_inside_parking"
                            android:text="Inside Parking" />

                        <CheckBox
                            android:id="@+id/residential_outside_parking"

                            android:text="Outside Parking" />
                    </TableRow>


                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_parking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Parking"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox
                            android:id="@+id/residential_parking_car"
                            android:text="CAR"
                            android:onClick="checkParking"/>

                        <CheckBox
                            android:id="@+id/residential_parking_twe_wheeler"

                            android:text="Two Wheeler"
                            android:onClick="checkParking"/>
                        <CheckBox
                            android:id="@+id/residential_parking_na"

                            android:text="NA"
                            android:onClick="checkParking"
                            android:checked="true" />
                    </TableRow>


                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_parking_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Parking Type"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox

                            android:id="@+id/residential_parkingtype_basement"
                            android:text="Basement" />

                        <CheckBox
                            android:id="@+id/residential_parkingtype_covered"

                            android:text="Covered" />
                        />
                    </TableRow>
                    <TableRow android:layout_span="1">

                        <CheckBox

                            android:id="@+id/residential_parkingtype_open"
                            android:text="Open" />

                        <CheckBox

                            android:id="@+id/residential_parkingtype_individual_floor"
                            android:text="Individual Floor" />
                        />
                    </TableRow>
                    <TableRow android:layout_span="1">



                        <CheckBox

                            android:id="@+id/residential_parkingtype_street_parking"

                            android:text="Street Parking" />
                        />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_powsersupply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Power Backup"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <RadioGroup
                    android:id="@+id/residential_rg_powerbackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/residential_rb_partial_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Partial" />

                    <RadioButton
                        android:id="@+id/residential_rb_full_poersupply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Full" />

                    <RadioButton
                        android:id="@+id/residential_rb_power_no_backup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No Backup"
                        android:checked="true"
                        />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_waterbackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Water Backup"
                    android:textColor="#006699"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />

                <RadioGroup
                    android:id="@+id/residential_rg_waterbackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/residential_rb_water_municipal_corp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Municipal Corp" />

                    <RadioButton
                        android:id="@+id/residential_rb_water_borewell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bore Well"

                        />

                    <RadioButton
                        android:id="@+id/residential_rb_water_both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Both"
                        android:checked="true"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:orientation="vertical"

                android:padding="20dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow android:layout_span="1">

                        <CheckBox

                            android:id="@+id/residential_ck_wifi"
                            android:text="Wi-fi/Internet" />

                        <CheckBox

                            android:id="@+id/residential_cksolar_water_heater"

                            android:text="Solar Water Heater" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="myClick"
        android:text="NEXT" />
</LinearLayout>
