<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="textAppearanceListItem">@style/list_item_appearance</item>
        <item name="colorPrimary">#f77c14</item>
        <item name="actionBarStyle">@style/themeActionBar</item>
        <item name="colorAccent">#f77c14</item>
        <!--  <item name="android:textColorPrimary">#212121</item>
         <item name="android:textColorSecondary">#727272</item>
          <item name="android:textColorHint">@color/texthintcolor</item>-->

    </style>


    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAppearanceListItem">@style/list_item_appearance</item>
    </style>

    <style name="list_item_appearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#987654</item>

    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>


